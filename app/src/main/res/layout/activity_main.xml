<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgrounddark"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.example.android.emergency.MainActivity">

    <LinearLayout
        android:id="@+id/topButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical">

    <Button
        android:id="@+id/whistle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:textStyle="bold"
        android:background="@drawable/whistleshape"
        android:textSize="25sp"
        android:padding="30dp"
        android:text="@string/Whistle" />

    <Button
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/helpshape"
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="25sp"
        android:padding="30dp"
        android:layout_marginTop="25dp"
        android:text="@string/Help" />

    <Button
        android:id="@+id/siren"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/sirenshape"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="25sp"
        android:padding="30dp"
        android:layout_marginTop="25dp"
        android:text="@string/Siren" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@android:color/holo_purple"/>


    <LinearLayout
        android:id="@+id/bottomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        >

    <Button
        android:id="@+id/hospital"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:onClick="hospital"
        android:background="@drawable/hospital1" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/nine_one_one"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/nineoneone"
        android:onClick="emergency" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Button
        android:id="@+id/location"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/gpsicon"
        android:onClick="gMaps" />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:gravity="bottom" >

    <SeekBar
        android:id="@+id/volumeControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp" />
</LinearLayout>

</LinearLayout>
